<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_bleu_2"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/barre"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/barre_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".66"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".05" />

    <ImageView
        android:id="@+id/folders"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/folders"
        app:layout_constraintEnd_toStartOf="@+id/barre"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".18"
        app:layout_constraintStart_toEndOf="@+id/mire_d"
        app:layout_constraintTop_toTopOf="@+id/horGuideline1"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".18" />

    <ImageView
        android:id="@+id/graph"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/graph_1"
        app:layout_constraintEnd_toStartOf="@+id/barre"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/mire_d"
        app:layout_constraintTop_toBottomOf="@+id/folders"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".12" />

    <ImageView
        android:id="@+id/graph_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/graph_2"
        app:layout_constraintEnd_toStartOf="@+id/barre"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/mire_d"
        app:layout_constraintTop_toBottomOf="@+id/graph"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".12" />

    <ImageView
        android:id="@+id/graph_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/graph_3"
        app:layout_constraintEnd_toStartOf="@+id/barre"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".12"
        app:layout_constraintStart_toEndOf="@+id/mire_d"
        app:layout_constraintTop_toBottomOf="@+id/graph_2"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".12" />

    <ImageView
        android:id="@+id/graduation_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:src="@drawable/graduation_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".32" />

    <ImageView
        android:id="@+id/graduation_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/graduation_2"
        app:layout_constraintBottom_toTopOf="@+id/graduation_1"
        app:layout_constraintHeight_percent=".28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".05" />

    <ImageView
        android:id="@+id/video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/video"
        android:onClick="launchVideo"
        app:layout_constraintEnd_toStartOf="@+id/mire_g"
        app:layout_constraintHeight_percent=".18"
        app:layout_constraintStart_toEndOf="@+id/binary"
        app:layout_constraintTop_toTopOf="@+id/horGuideline1"
        app:layout_constraintWidth_percent=".18"
        tools:ignore="UsingOnClickInXml" />

    <ImageView
        android:id="@+id/worldmap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/worldmap"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toStartOf="@+id/mire_g"
        app:layout_constraintHeight_percent=".14"
        app:layout_constraintStart_toEndOf="@+id/binary"
        app:layout_constraintTop_toBottomOf="@+id/video"
        app:layout_constraintWidth_percent=".14" />

    <ImageView
        android:id="@+id/notice"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/notice"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@+id/graduation_1"
        app:layout_constraintEnd_toStartOf="@+id/mire_g"
        app:layout_constraintHeight_percent=".18"
        app:layout_constraintStart_toEndOf="@+id/binary"
        app:layout_constraintTop_toBottomOf="@+id/worldmap"
        app:layout_constraintWidth_percent=".18" />

    <TextView
        android:id="@+id/binary"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="9498483847845758589494898498498948984948484747378383894894845785747473737484854847741038462894904836253648950593725465590595959594746464"
        android:textColor="@color/white"
        app:layout_constraintHeight_percent=".30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horGuideline1"
        app:layout_constraintWidth_percent=".08" />


    <ImageView
        android:id="@+id/cercle_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/cercle_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".50" />

    <ImageView
        android:id="@+id/cercle_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/cercle_3"
        app:layout_constraintBottom_toBottomOf="@+id/cercle_4"
        app:layout_constraintEnd_toEndOf="@+id/cercle_4"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".40"
        app:layout_constraintStart_toStartOf="@+id/cercle_4"
        app:layout_constraintTop_toTopOf="@+id/cercle_4"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".30" />

    <ImageView
        android:id="@+id/cercle_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/cercle_2"
        app:layout_constraintBottom_toBottomOf="@+id/cercle_3"
        app:layout_constraintEnd_toEndOf="@+id/cercle_3"
        app:layout_constraintStart_toStartOf="@+id/cercle_3"
        app:layout_constraintTop_toTopOf="@+id/cercle_3"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".18" />

    <ImageView
        android:id="@+id/cercle_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/cercle_1"
        app:layout_constraintBottom_toBottomOf="@+id/cercle_2"
        app:layout_constraintEnd_toEndOf="@+id/cercle_2"
        app:layout_constraintStart_toStartOf="@+id/cercle_2"
        app:layout_constraintTop_toTopOf="@+id/cercle_2"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".06" />

    <ImageView
        android:id="@+id/mire_g"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/mire_g"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/horGuideline3"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".08" />

    <ImageView
        android:id="@+id/mire_d"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/mire_d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".50"
        app:layout_constraintStart_toEndOf="@+id/horGuideline2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent="0.12" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.63" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horGuideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.37" />

</androidx.constraintlayout.widget.ConstraintLayout>